(defun require-extensions (action lst)
  (mapcar (lambda(ext)
    (funcall action ext)) lst))

(require-extensions 'require
 (list 
  'tabbar 
  ;; 模仿 Vim 中 (.) 的功能
  'dot-mode
  ;; 给 buffer 上所有窗口编号
  'window-numbering
  ;; tabber
  (tabbar-mode t)
;  'thing-edit
;  'second-sel
;  'browse-kill-ring+
;  'bbdb
;  'gnuplot
;  'muse-mode
;  'w3m-load
;  'rect-mark
;  'multi-term
;  'lusty-explorer
;  'oddmuse
;  'emaci
;  'move-text
;  'uniquify
;  'hide-region
))

;; slime
(setq inferior-lisp-program "sbcl")
(require 'slime-autoloads)
(slime-setup)

;; color-theme 相关设置
(load-file "~/.emacs.d/plugins/themes/color-theme-colorful-obsolescence.el")
(color-theme-colorful-obsolescence)

;; YAsnippet 的相关设置
(yas/initialize)
(yas/load-directory "~/.emacs.d/el-get/yasnippet/snippets")

;; auto-complete
(add-to-list 'ac-dictionary-directories "~/.emacs.d/el-get/auto-complete/ac-dict")
(ac-config-default)
(auto-complete-mode 1)

